# Database Configuration
# Local development (SQLite)
DATABASE_URL=sqlite:///data/episodes.sqlite

# Railway production (PostgreSQL) - Railway will automatically set this
# DATABASE_URL=postgresql://user:password@host:port/database

# RSS and scraping
RSS_URL=https://omny.fm/shows/daniel-and-kellys-extraordinary-universe/playlists/podcast.rss
USER_AGENT=Podcast Search Bot 1.0

# Embedding model
MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# Chunking parameters
CHUNK_SIZE=1200
CHUNK_OVERLAP=200

# Search parameters
TOP_K=10
HYBRID_ALPHA=0.7

# Logging
LOG_LEVEL=INFO

# Railway specific
PORT=8000
